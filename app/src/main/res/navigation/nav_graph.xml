<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">


    <!-- Переход с экрана привествия на экран опросника -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.alextimofeev_android_hw9.fragments.WelcomeFragment"
        android:label="Fragment Welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:enterAnim="@anim/slide_1_in"
            app:exitAnim="@anim/slide_2_out"
            app:popEnterAnim="@anim/slide_3_in"
            app:popExitAnim="@anim/slide_4_out" />
    </fragment>

    <!-- Переход с экрана опросника на экран результатов или на экран приветствия -->
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.alextimofeev_android_hw9.fragments.QuizFragment"
        android:label="Fragment Quiz"
        tools:layout="@layout/fragment_quiz" >

        <!-- С удалением из обратного стека -->
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/quizFragment"
            app:destination="@id/resultFragment"
            app:enterAnim="@anim/slide_1_in"
            app:exitAnim="@anim/slide_2_out"
            app:popEnterAnim="@anim/slide_3_in"
            app:popExitAnim="@anim/slide_4_out"/>
        <action
            android:id="@+id/action_quizFragment_to_welcomeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_3_in"
            app:exitAnim="@anim/slide_4_out"
            app:popEnterAnim="@anim/slide_1_in"
            app:popExitAnim="@anim/slide_2_out"/>
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.alextimofeev_android_hw9.fragments.ResultFragment"
        android:label="Fragment Result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_3_in"
            app:exitAnim="@anim/slide_4_out"
            app:popEnterAnim="@anim/slide_1_in"
            app:popExitAnim="@anim/slide_2_out"/>
        <!-- С удалением из обратного стека -->
        <action
            android:id="@+id/action_resultFragment_to_quizFragment"
            app:popUpTo="@id/resultFragment"
            app:popUpToInclusive="true"
            app:destination="@id/quizFragment"
            app:enterAnim="@anim/slide_3_in"
            app:exitAnim="@anim/slide_4_out"
            app:popEnterAnim="@anim/slide_1_in"
            app:popExitAnim="@anim/slide_2_out"/>
        <argument
            android:name="pointsScored"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="possibleScore"
            app:argType="integer"
            android:defaultValue="0" />

    </fragment>
</navigation>